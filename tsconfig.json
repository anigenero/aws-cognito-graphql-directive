{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": false,
    "noImplicitAny": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "alwaysStrict": false,
    "noImplicitUseStrict": true,
    "moduleResolution": "node",
    "strict": false,
    "lib": [
      "es5",
      "es6"
    ]
  },
  "include": [
    "./src/index.ts",
    "./src/utils.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*.ts",
    "src/__mocks__/*.ts"
  ]
}

